// 4. Determinar si el primero de un conjunto de tres números dados, es menor que los otros dos.

Console.WriteLine("ingresar numero 1: ");
int n1 = int.Parse(Console.ReadLine());

Console.WriteLine("ingresar numero 2: ");
int n2 = int.Parse(Console.ReadLine());

Console.WriteLine("ingresar numero 3: ");
int n3 = int.Parse(Console.ReadLine());

if (n1 < n2 && n1 < n3)
{
    Console.WriteLine("el valor del numero1 es menor a los demás valores");
}
else Console.WriteLine("el valor del numero1 no es menor a los demas valores");
