// 5. Determinar y exhibir si la estatura de una persona adulta dada, es mayor que la 
//estatura media de las personas adultas de su sexo, siendo: estatura media de mujeres 
//adultas: 1,65 m.y estatura media de varones adultos: 1,72 m.
//Estructuras de selección múltiple.

Console.WriteLine("ingresar Número 1 para indicar genero Femenino ó Número 0 para género masculino");
int genero = int.Parse(Console.ReadLine());

Console.WriteLine("Ingresar la estatúra en centímetros de la persona: ");
int estatura = int.Parse(Console.ReadLine());

int estaturamh = 172;
int estaturamm = 165;

if (genero == 0 && estatura > estaturamh)
{
    Console.WriteLine("La persona es de género masculino con una estatura mayor al promedio.");
}


if (genero == 1 && estatura > estaturamm)
{
    Console.WriteLine("La persona es de género femenino con una estatura mayor al promedio");
}

else Console.WriteLine("La persona tiene menor estatura que el promedio de su género.");
